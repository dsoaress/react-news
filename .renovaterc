{
  "extends": [
    "config:base"
  ],
  "labels": [
    "dependencies"
  ],
  "semanticCommits": "enabled",
  "rangeStrategy": "replace",
  "rebaseLabel": "rebase",
  "rebaseWhen": "auto",
  "packageRules": [
    {
      "updateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "depTypeList": [
        "devDependencies"
      ],
      "automerge": true
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  }
}
